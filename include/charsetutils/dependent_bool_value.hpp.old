#ifndef CHARSETUTILS_DEPENDENT_BOOL_VALUE_HPP
#define CHARSETUTILS_DEPENDENT_BOOL_VALUE_HPP


/**
 * @brief Bool value that is dependent on template parameters
 *
 * @tparam value Bool value
 * @tparam Args Types that the value depend on
 */
template <bool value, typename... Args>
inline constexpr bool dependent_bool_value{value};

/**
 * @brief Always false bool that is dependent on template parameters
 *
 * @tparam Args Types that the value depend on
 */
template <typename... Args>
inline constexpr bool dependent_false{dependent_bool_value<false, Args...>};

#endif // #ifndef CHARSETUTILS_DEPENDENT_BOOL_VALUE_HPP
